{% extends "PDFBundle:Print:print.base.pdf.html.twig" %}

{% block header_ccs %}
    <style>
        table.header{
            width: 100%;
            height: 30mm;
            margin-left: auto;
            margin-right: auto;
            border-color: black;
            border-style: dotted;
        }
        td.logo{
            text-align: center; vertical-align: middle;
        }
        img.logo{
            height: 30mm;
        }
        td.qr{
            text-align: center; vertical-align: middle;
        }
        img.qr{
            height: 30mm;
        }
        td.data-logo{
            text-align: left; vertical-align: middle;
        }
        td.season{
            text-align: center; vertical-align: middle;
        }
        p.data-logo{
            padding-top: 5px;
            padding-left: 5px;
            font-family: Arial;
            font-size: 8pt;
        }
    </style>
{% endblock %}

{% block header %}
    <table class="header" >
        <tbody>
        <tr>
            <td class="logo">
             <img class="logo"  src="{% block logo_data %}{% endblock %}">
            </td>
            <td class="data-logo">
                <p class="data-logo">
                    {% block data_logo_data %}{% endblock %}
                </p>
            </td>
            <td class="qr">
               {#<img class="qr"  src="{% block qr_data %}{% endblock %}" alt="">
            #}
            </td>
            <td class="season">{% block season_data %}{% endblock %}</td>
        </tr>
        </tbody>
    </table>
{% endblock %}